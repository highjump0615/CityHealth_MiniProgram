/* pages/shop/image.wxss */

.container {
  margin: 10rpx 20rpx;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.tile-item {
  width: 25%;
  padding-top: 25%;
  position: relative;
}
.item-content {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  bottom: 10rpx;
  right: 10rpx;
}

.item-content image {
  width: 100%;
  height: 100%;
}

.add-mark {
  border: 1px solid #ccc;
}
