/* pages/near/near.wxss */

page {
  height: 100vh;
  display: block;
}

/* tab切换 */
.swiper-tab{
  border-bottom: 2rpx solid #cccccc; 
  text-align: center; 
  line-height: 90rpx;
  display: flex;
  width: 100%;
  background-color: white;
}
.swiper-tab-list{
  font-size: 30rpx; 
  color: #515151; 
  flex: 1;
}
.on{
  color: #1AAD19; 
  border-bottom: 5rpx solid #1AAD19;
}
.swiper-box{ 
  width: 100%;
  flex: 1;
}

/* 列表 */
.nav-items {
  margin: 0;
}
.nav-item.bottom-border {
  border-bottom: 1px solid #cccccc;
}
.nav-item-head {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.nav-item-head image {
  width: 100%;
  height: 100%;
}

.nav-text-title {
  font-size: 34rpx;
  display: block;
}
.nav-text-addr {
  display: block;
  margin-top: 14rpx;
}
.nav-text-desc {
  font-size: 26rpx;
  color: #515151;
}

.nav-item-tail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.nav-text-mark {
  font-size: 26rpx;
  width: 44rpx;
  height: 44rpx;
  color: white;
  background: #ff5a00;
  border-radius: 50%;
  text-align: center;
  line-height: 44rpx;
  float: left;
}

/* 店家列表 */
.shop-list .nav-item-content {
  margin-left: 0;
}

.ratestar {
  margin-top: 8rpx;
}

/* 优惠列表 */
.onsale-list .nav-text-desc {
  color: #a9a9a9;
  display: block;
  margin-top: 20rpx;
}
.onsale-list .nav-text-date {
  color: #d6d6d6;
  margin-top: 15rpx;
  display: block;
  text-align: right;
}
.onsale-list .nav-item-content {
  margin-left: 0;
}


/* 卡券列表 */
.card-list {
  background: transparent;
}
.card-list .nav-item {
  background: white;
  margin: 0 30rpx 30rpx 30rpx;
  border-radius: 15rpx;
  border-left: solid 20rpx #1AAD19;
  padding: 30rpx;
}
.card-list .nav-item:nth-child(1) {
  margin-top: 30rpx;
}
.card-list .nav-item-price {
  font-size: 30rpx;
  padding-right: 30rpx;
  border-right: 1rpx solid #cccccc;
}
.card-list .nav-text-title {
  font-size: 30rpx;
}
.card-list .nav-text-desc {
  font-size: 24rpx;
  margin-top: 8rpx;
  display: block;
}
.card-list .nav-item-tail {
  justify-content: center;
}
.card-list .nav-item-tail button {
  font-size: 30rpx;
}